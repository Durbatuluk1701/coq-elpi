pred remove_at o:int, o:list int, i:int, o:list int.
remove_at HD [HD | TL] 0 TL :- !.
remove_at ELT [HD | TL] POS [HD | RES] :- X is POS - 1, remove_at ELT TL X RES.

pred age o:string, o:int.
age "x" 3.
age "y" 4.
age "y" 5.

pred has_divisor i:int i:int.
has_divisor K N :- K mod N = 0.
has_divisor K N :- K > N * N, has_divisor K {calc (N + 1)}.

pred is_prime i:int.
is_prime 2.
is_prime 3.
is_prime N :- MOD is N mod 2, not (MOD = 0), not (has_divisor N 3).
is_prime _ :- print "Not a prime number"; fail.

main :- 
  remove_at HD [1,2,3] 0 RES, 
  print "HD" HD "RES" RES,
  remove_at 8 L 2 [1, 2, 3],
  print "L" L, 
  age "y" X,
  print X,
  is_prime 8
.
